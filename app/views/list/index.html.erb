<h1>List of items</h1>
<br>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
     
    </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
   
      <tr>
        
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        
        
      </tr>
      <% end %>
    
    
  <tbody>
</table>
<br>
<%= link_to "Back", root_path, class: "btn btn-dark" %>
