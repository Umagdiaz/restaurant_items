<div class="container mt-4 pb-4 w-75">
  <div class="card">
    <div class="card-body">
      <h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-outline-success btn-rectangular btn-sm" %> | <%= link_to "Back", root_path, class: "btn btn-dark btn-rectangular btn-sm" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %> 
      <br>
    </div>
  </div> 
</div>   

