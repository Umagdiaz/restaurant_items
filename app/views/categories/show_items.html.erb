<div class="container-fluid">
  <br>
    <h2>List of <%= @category.name %></h2>
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <br>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to "Back", root_path, class: "btn btn-dark btn-rectangular" %>
</div>

