<p style="color: green"><%= notice %></p>

<h2>Categories</h2>
<%= link_to "New category", new_category_path, class: "new-link" %>
<hr>
<br>
<div id="categories">
  <% @categories.each do |category| %>

    <%= render category %>
    <p>
      <%= link_to "Show", category, class: "btn btn-outline-dark btn-rectangular btn-sm" %>
    </p>
    <hr>
  <% end %>
  
</div>

